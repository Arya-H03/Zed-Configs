// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-f": "editor::Format"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-e ctrl-right": [
        "editor::MoveToEndOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-e ctrl-left": [
        "editor::MoveToBeginningOfLine",
        {
          "stop_at_soft_wraps": true,
          "stop_at_indent": true
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-e ctrl-shift-right": [
        "editor::SelectToEndOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-e ctrl-shift-left": [
        "editor::SelectToBeginningOfLine",
        {
          "stop_at_soft_wraps": true,
          "stop_at_indent": true
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-d ctrl-f": "editor::GoToDefinition"
    }
  },
  {
    "context": "Editor",
      "bindings": {
      "ctrl-d ctrl-c": "editor::GoToDeclaration"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-s ctrl-t": "task::Spawn"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-r ctrl-r": "editor::Rename"
    }
  }
]
